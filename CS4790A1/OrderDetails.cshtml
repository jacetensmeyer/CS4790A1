@{
    Layout = "~/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html>
<head>
    <title></title>
</head>
<body>
    @{ var name = Request["name"]; var food = Request["food"]; var drink = Request["drink"]; var dessert = Request["dessert"]; var tip = Request["tip"]; } @*<h2>Order Details</h2><h3>Food Items</h3>@food <h3>Drinks</h3>@drink <h3>Desserts</h3>@dessert*@
    <h2>Order Details</h2>
    <table class="table table-hover">
        <tr>
            <td>Customer Name: </td>
            <td>@name</td>
        </tr>
        <tr>
            <td>Food Items: </td>
            <td>
            @foreach (var item in food)
            {
                @item
            }
            </td>
        </tr>
        <tr>
            <td>Drinks: </td>
            <td>
            @foreach (var item in drink)
            {
                @item
            }
            </td>
        </tr>
        <tr>
            <td>Desserts: </td>
            <td>
            @foreach (var item in dessert)
            {
                @item
            }
            </td>
        </tr>
        <tr>
            <td>Tip:</td>
            <td>$@tip</td>
        </tr>
    </table>
</body>
</html>
